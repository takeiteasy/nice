{
    "version": 4,
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/build/**",
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/scenes/**",
                "${workspaceFolder}/deps/**",
                "${workspaceFolder}/deps/sokol/**",
                "${workspaceFolder}/deps/glm/**",
                "${workspaceFolder}/deps/rapidjson/**",
                "${workspaceFolder}/deps/fmt/**",
                "${workspaceFolder}/deps/flecs/**",
                "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include",
                "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include"
            ],
            "defines": [
                "SOKOL_METAL",
                "__OBJC__"
            ],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-clang-arm64",
            "compilerArgs": [
                "-x",
                "objective-c++",
                "-DSOKOL_METAL",
                "-fenable-matrix",
                "-framework",
                "Metal",
                "-framework",
                "Cocoa",
                "-framework",
                "IOKit",
                "-framework",
                "MetalKit",
                "-framework",
                "Quartz",
                "-framework",
                "AudioToolbox",
                "-arch",
                "arm64",
                "-Wno-c99-designator",
                "-Wno-reorder-init-list"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/usr/include"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            }
        }
    ]
}
